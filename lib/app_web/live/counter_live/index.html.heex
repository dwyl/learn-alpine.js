<h1 class="font-bold">Counter LiveView</h1>

<div x-data="{counter: 0}" id="counter" phx-hook="Counter">
  <button @click="counter = counter - 1; $dispatch('update-counter', {counter: counter})">-</button>
  <span x-text="counter"></span>
  <button class="" @click="counter = counter + 1; $dispatch('update-counter', {counter: counter})">+</button>
</div>
