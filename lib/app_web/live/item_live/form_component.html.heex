<div>
  <.form
    :let={f}
    for={@changeset}
    id="item-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save"
  >
    <.form_field type="text_input" form={f} field={:text} placeholder="item" />
    <.button label="Save" phx_disable_with="Saving..." />
  </.form>
</div>
